# Klyra Dashboard Configuration
# Copy this file to .env and customize for your deployment

# =============================================================================
# DATABASE
# =============================================================================
# For development (SQLite - single user):
# DATABASE_URL=sqlite:///data/klyra.db

# For production (PostgreSQL - multi-user):
POSTGRES_USER=klyra
POSTGRES_PASSWORD=change_this_password
POSTGRES_DB=klyra

# =============================================================================
# SECURITY
# =============================================================================
# IMPORTANT: Generate a secure random key for production!
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-in-production

# =============================================================================
# OLLAMA (AI MODEL)
# =============================================================================
# URL where Ollama is running
# For Docker on Linux: http://host.docker.internal:11434
# For Docker on Windows/Mac: http://host.docker.internal:11434
# For local development: http://localhost:11434
OLLAMA_BASE_URL=http://localhost:11434

# LLM model for chat responses
OLLAMA_MODEL=llama3

# Embedding model for document search
OLLAMA_EMBED_MODEL=nomic-embed-text

# =============================================================================
# PORTS (Docker)
# =============================================================================
BACKEND_PORT=8000
FRONTEND_PORT=3000

# =============================================================================
# FRONTEND
# =============================================================================
# API URL as seen from the browser (not internal Docker network)
NEXT_PUBLIC_API_URL=http://localhost:8000
